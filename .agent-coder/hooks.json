{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "read_file",
        "hooks": [
          {
            "type": "command",
            "command": "echo \"[Hook] About to read a file\""
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "echo \"[Hook] Tool execution finished\""
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "echo \"[Hook] User submitted prompt\""
          }
        ]
      }
    ]
  }
}
